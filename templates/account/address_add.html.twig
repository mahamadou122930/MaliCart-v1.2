{% extends 'base.html.twig' %}

{% block title %}Hello AccountAdressController!{% endblock %}

   
{% block content %}
<!-- Page Title-->
      <div class="page-title-overlap bg-dark pt-4">
        <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
          <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-start">
                <li class="breadcrumb-item"><a class="text-nowrap" href="{{path('home')}}"><i class="ci-home"></i>Home</a></li>
                <li class="breadcrumb-item text-nowrap"><a href="{{path('account')}}">Account</a>
                </li>
                <li class="breadcrumb-item text-nowrap active" aria-current="page">Addresses</li>
              </ol>
            </nav>
          </div>
          <div class="order-lg-1 pe-lg-4 text-center text-lg-start">
            <h1 class="h3 text-light mb-0">My addresses</h1>
          </div>
        </div>
      </div>
      <div class="container pb-5 mb-2 mb-md-4">
        <div class="row">
          <!-- Sidebar-->
          <aside class="col-lg-4 pt-4 pt-lg-0 pe-xl-5">
            <div class="bg-white rounded-3 shadow-lg pt-1 mb-5 mb-lg-0">
              <div class="d-md-flex justify-content-between align-items-center text-center text-md-start p-4">
                <div class="d-md-flex align-items-center">
                  <div class="ps-md-3">
                    <h3 class="fs-base mb-0">{{app.user.firstname}} {{app.user.lastname}}</h3><span class="text-accent fs-sm">{{app.user.email}}</span>
                  </div>
                </div><a class="btn btn-primary d-lg-none mb-2 mt-3 mt-md-0" href="#account-menu" data-bs-toggle="collapse" aria-expanded="false"><i class="ci-menu me-2"></i>Account menu</a>
              </div>
              <div class="d-lg-block collapse" id="account-menu">
                <div class="bg-secondary px-4 py-3">
                  <h3 class="fs-sm mb-0 text-muted">Dashboard</h3>
                </div>
                <ul class="list-unstyled mb-0">
                  <li class="border-bottom mb-0"><a class="nav-link-style d-flex align-items-center px-4 py-3" href="#"><i class="ci-bag opacity-60 me-2"></i>Orders<span class="fs-sm text-muted ms-auto">1</span></a></li>
                  <li class="border-bottom mb-0"><a class="nav-link-style d-flex align-items-center px-4 py-3" href="#"><i class="ci-heart opacity-60 me-2"></i>Wishlist<span class="fs-sm text-muted ms-auto">3</span></a></li>
                  <li class="mb-0"><a class="nav-link-style d-flex align-items-center px-4 py-3" href="#"><i class="ci-help opacity-60 me-2"></i>Support tickets<span class="fs-sm text-muted ms-auto">1</span></a></li>
                </ul>
                <div class="bg-secondary px-4 py-3">
                  <h3 class="fs-sm mb-0 text-muted">Account settings</h3>
                </div>
                <ul class="list-unstyled mb-0">
                  <li class="border-bottom mb-0"><a class="nav-link-style d-flex align-items-center px-4 py-3" href="{{path('account')}}"><i class="ci-user opacity-60 me-2"></i>Profile info</a></li>
                  <li class="border-bottom mb-0"><a class="nav-link-style d-flex align-items-center px-4 py-3 active" href="{{path('account_address')}}"><i class="ci-location opacity-60 me-2"></i>Addresses</a></li>
                  <li class="mb-0"><a class="nav-link-style d-flex align-items-center px-4 py-3" href="#"><i class="ci-card opacity-60 me-2"></i>Payment methods</a></li>
                  <li class="d-lg-none border-top mb-0"><a class="nav-link-style d-flex align-items-center px-4 py-3" href="{{path('app_logout')}}"><i class="ci-sign-out opacity-60 me-2"></i>Sign out</a></li>
                </ul>
              </div>
            </div>
          </aside>
          <!-- Content  -->
             <section class="col-lg-8">
                <!-- Toolbar-->
                <div class="d-none d-lg-flex justify-content-between align-items-center pt-lg-3 pb-4 pb-lg-5 mb-lg-3">
                <h6 class="fs-base text-light mb-0">Add a new address</h6><a class="btn btn-primary btn-sm" href="{{path('account_address')}}"><i class="ci-sign-out me-2"></i>Back</a>
                </div>
                 <!-- Forms validation: status tooltips -->
                <form class="needs-validation" method="post" autocomplete="off" tabindex="-1" novalidate>
                <div class="row">
                    <div class="col-md-12 mb-3">
                    <label class="form-label" for="address_name" class="required">Qu'elle nom souhaitez vous attribuer Ã  cette adresses ?</label>
                    {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-4 mb-3">
                    <label class="form-label" for="address_firstname" class="required">First name</label>
                    {{ form_row(form.firstname, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-tooltip">Please fill in you first name!</div>
                    </div>
                    <div class="col-md-4 mb-3">
                    <label class="form-label" for="address_lastname" class="required">Last name</label>
                    {{ form_row(form.lastname, {'attr': {'class': 'form-control'}}) }}
                    <div class="invalid-tooltip">Looks good!</div>
                    </div>
                    <div class="col-md-4 mb-3">
                    <label class="form-label" for="address_company" >Company</label>
                    {{ form_row(form.company, {'attr': {'class': 'form-control'}}) }}
                    <div class="valid-tooltip">Looks good!</div>
                    </div>
                    <div class="col-md-4 mb-3">
                    <label class="form-label" for="address-country">Country</label>
                    {{ form_widget(form.country, { 'attr': {'class': 'form-select', 'id': 'address_country', 'required': 'required'} }) }}
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label" for="address-city">City</label>
                    {{ form_row(form.city, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label" for="address-zip">Phone Number</label>
                        {{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
                    </div>
                     <div class="col-md-3 mb-3">
                        <label class="form-label" for="address-postal">Code Postal</label>
                    {{ form_row(form.postal, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="col-md-9 mb-3">
                    <label class="form-label" for="address-line1">Your Addresses</label>
                    {{ form_row(form.address, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    </div>
                    <div class="mb-3">
                        <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="address-primary">
                        <label class="form-check-label" for="address-primary">Make this address primary</label>
                        </div>
                    </div>
                    <div class="text-sm-end pt-4">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-shadow'}}) }}
                        {{ form_widget(form._token) }}
                    </div>
                </form>
          </section>
        </div>
      </div>

{% endblock %}
